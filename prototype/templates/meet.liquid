<div class="container">
<div class="row">

	<div class="col-md-8">
		<h2 class="page-header">The Senior Team</h2>
		<div class="row">
			{% for person in model.meet %}
				<div class="col-md-4">
					<div class="thumbnail">
						<img src="public/images/staff/{{ person.img }}" alt="" class="img-responsive">
						<div class="caption">
							<h4>{{ person.name }} {{ person.surname }}<br><small>{{ person.role }}</small> <em><a href="#" data-toggle="modal" data-target="#{{person.name}}Modal" class="small">More about {{ person.name }} <i class="fa fa-long-arrow-right"></i></a></em></h4>
							<blockquote><em>"{{ person.quote }}"</em></blockquote>
							<p>
								<i class="fa fa-mobile"></i> {{ person.mobile }}<br>
								<i class="fa fa-phone"></i> {{ person.tel }}<br>
								<i class="fa fa-envelope-o"></i> {{ person.email }}<br>
							</p>
							<p><a href="#" class="btn btn-primary btn-sm">Contact Now</a></p>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

	<div class="col-md-4">
		<br><br><br><br><br>
		<div>
			<blockquote><img class="img-circle" src="http://placehold.it/100x100"/><br><br><p>"Testimonial Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas sed diam eget risus varius blandit sit amet non magna."</p><footer><cite>Customer Name</cite></footer></blockquote>
		</div>
	</div>
</div>

{% for person in model.meet %}
<!-- Modal -->
<div class="modal fade" id="{{person.name}}Modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        
        	<h4 class="modal-title" id="myModalLabel">More about {{ person.name }} {{ person.surname }}</h4>
      </div>
      <div class="modal-body">
      	<div class="row">
      		<div class="col-md-6">
      			{{ person.more }}
      			<hr>
      			<strong>Qualifications:</strong>
      			<ul class="list-inline">
      				{{ person.qualifications }}
      			</ul>
      		</div>
      		<div class="col-md-6">
      			<img class="pull-right thumbnail" src="http://placehold.it/300x400">
      		</div>
      	</div>
      </div>
    </div>
  </div>
</div>
{% endfor %}
{% endblock %}