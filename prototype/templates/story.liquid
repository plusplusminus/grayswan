		<a href="#" class="fa fa-2x fa-long-arrow-down"></a>
	</div>
</div>

<div class="container-fluid">
	<br>
	<div class="jumbotron">
		<div role="tabpanel">
			<div class="col-md-5">
				{% for story in model.stories %}
					<h2><a href="#{{ story.link }}" role="tab" data-toggle="tab">{{ story.title }}</a></h2>
				{% endfor %}
			</div>
			<div class="col-md-7">
				<div class="tab-content">
					{% for story in model.stories %}
						<div role="tabpanel" class="tab-pane {{ story.active }}" id="{{ story.link }}">
							<br><br>
							<strong><small>&mdash; {{ story.title }}</small></strong>
							<p class="lead">{{ story.quote }}</p>	
							{{ story.content }}
							<{{ story.list }}>
								{{ story.items }}
							</{{ story.list }}>
							{{ story.post-content }}
							<a href="#">{{ story.cta }}</a>
							{{ story.images }}
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	<div class="clearfix"></div>
	<br><br>
	</div><!--/.jumbotron-->
</div>

<div class="container">
	
	{% include "testimonials" %}

</div>

<div class="container">
	
	{% include "newsletter" %}

{% endblock %}